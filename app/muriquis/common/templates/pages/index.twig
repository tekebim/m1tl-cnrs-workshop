{% extends "base.twig" %}

{% block title %}{{ projectName }}{% endblock %}

{% block content %}
    <section id="page-index">
        <div class="flex py-24 mb-12 justify-center bg-auto bg-no-repeat bg-center relative" style="background-image: url('{{ projectURL }}/{{ projectSlug }}/assets/img/cover-page-index.jpg')">
            <div class="hero-overlay z-0"></div>
            <div class="p-6 mb-6 text-center max-w-2xl text-white z-10">
                <div class="md:text-3xl text-3xl font-bold">{{ projectName }} database project</div>
                <div class="text-xl font-normal mt-4">Database last update : <span class="inline-block rounded-full text-white
                     bg-black text-xs font-bold mr-1 md:mr-2 mb-2 px-2 md:px-4 py-1">{{ lastUpdateBDD }}</span>
                </div>
                <div class="mt-6 flex justify-center h-12 relative">
                    <a href="{{ projectURL }}/{{ projectSlug }}/about.php" class="bg-black text-white font-bold py-3 px-6 rounded-lg mx-2">About the project</a>
                    <a href="#tableResults" class="bg-primary hover:bg-primary-dark text-white font-bold py-3 px-6 rounded-lg mx-2">Explore database</a>
                </div>
            </div>
        </div>

        {% include 'components/table/filter_table.twig' with {'values': values, 'metas':metas} %}
        {% include 'components/table/record_table.twig' with {'data': data, 'metas':metas} %}
    </section>
{% endblock %}
