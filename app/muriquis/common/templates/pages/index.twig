{% extends "base.twig" %}

{% block title %}{{ projectName }}{% endblock %}

{% block content %}
    <section id="page-index">
        <div class="flex py-24 justify-center bg-auto bg-no-repeat bg-center" style="background-image: url('{{ projectURL }}/{{ projectSlug }}/assets/img/cover-page-index.jpg')">
            <div class="p-12 text-center max-w-2xl">
                <div class="md:text-3xl text-3xl font-bold">{{ projectName }} database project</div>
                <div class="text-xl font-normal mt-4">Database last update : <span class="inline-block rounded-full text-white
                     bg-black  text-xs font-bold mr-1 md:mr-2 mb-2 px-2 md:px-4 py-1 opacity-80 hover:opacity-100">{{ lastUpdateBDD }}</span>
                </div>
                <div class="mt-6 flex justify-center h-12 relative">
                    <div class="mx-3 shadow-md font-medium py-2 px-4 text-green-100
        cursor-pointer bg-primary rounded text-lg tr-mt">About the project
                    </div>
                    <div class="mx-3 shadow-md font-medium py-2 px-4 text-green-100
        cursor-pointer bg-green-600 rounded text-lg tr-mt">Explore database
                    </div>
                </div>
            </div>
        </div>

        {% include 'components/table/filter_table.twig' with {'values': values, 'metas':metas} %}
        {% include 'components/table/record_table.twig' with {'data': data, 'metas':metas} %}
    </section>
{% endblock %}
