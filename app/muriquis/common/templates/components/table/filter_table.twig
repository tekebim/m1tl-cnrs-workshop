<div class="px-5 mx-auto flex justify-center items-center">
    <form id="edit_form" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2">
        {% for key, data in metas %}
            {% if data|length > 0 %}
                <fieldset class="mb-5">
                    <div class="w-full">
                        <div class="font-sans text-lg border-b mb-5 pb-5 flex">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
                            </svg>
                            <span>Filters for table {{ key }}</span>
                        </div>
                        <div class="flex flex-wrap -mx-5">
                            {% for meta in data %}
                                <div class="w-full md:w-1/2 lg:w-1/3 px-5">
                                    {% if meta.type == 'txt' %}
                                        {% include 'components/table/one_filter_txt.twig' with {'meta':meta, 'value':values[meta.id]} %}
                                    {% endif %}
                                    {% if meta.type == 'int' or meta.type == 'float' %}
                                        {% include 'components/table/one_filter_num.twig' with {'meta':meta, 'value':values[meta.id]} %}
                                    {% endif %}
                                    {% if meta.type == 'date' %}
                                        {% include 'components/table/one_filter_date.twig' with {'meta':meta, 'value':values[meta.id]} %}
                                    {% endif %}
                                    <input type="hidden" name="field[{{ meta.id }}]" value="{{ meta.field_name }}"/>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </fieldset>
            {% endif %}
        {% endfor %}

        <div class="flex justify-center">
            <button type="submit" name="reset-form" class="py-3 px-8 mx-4 border-0 rounded-md bg-gray-400 text-white">Reset all filters</button>
            <button type="submit" class="py-3 px-8 mx-4 border-0 rounded-md bg-primary">Apply filters</button>
        </div>
    </form>
</div>
