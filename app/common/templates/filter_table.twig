<div class="px-5 mx-auto flex justify-center items-center">
    <form id="edit_form" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2">
        {% for key, data in metas %}
            {% if data|length > 0 %}
                <fieldset class="mb-5">
                    <div class="w-full">
                        <p class="font-sans text-lg border-b mb-5 pb-5">Filters for table {{ key }}</p>
                        <div class="flex flex-wrap -mx-5">
                            {% for meta in data %}
                                <div class="w-full md:w-1/2 lg:w-1/3 px-5">
                                    {% if meta.type == 'txt' %}
                                        {% include 'one_filter_txt.twig' with {'meta':meta, 'value':values[meta.id]} %}
                                    {% endif %}
                                    {% if meta.type == 'int' or meta.type == 'float' %}
                                        {% include 'one_filter_num.twig' with {'meta':meta, 'value':values[meta.id]} %}
                                    {% endif %}
                                    {% if meta.type == 'date' %}
                                        {% include 'one_filter_date.twig' with {'meta':meta, 'value':values[meta.id]} %}
                                    {% endif %}
                                    <input type="hidden" name="field[{{ meta.id }}]" value="{{ meta.field_name }}"/>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </fieldset>
            {% endif %}
        {% endfor %}

        <div class="flex justify-center">
            <form method="post">
                <button type="submit" class="py-3 px-8 mx-4 border-0 rounded-md bg-gray-400 text-white">Reset all filters
                </button>
            </form>
            <button type="submit" class="py-3 px-8 mx-4 border-0 rounded-md bg-primary">Apply filters</button>
        </div>
    </form>
</div>
